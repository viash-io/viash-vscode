{
  "name": "viash",
  "displayName": "Viash",
  "description": "The official Viash VS Code extension.",
  "author": "Data Intuitive",
  "publisher": "data-intuitive",
  "icon": "assets/logo/viash.png",
  "license": "GPL-3.0-only",
  "keywords": [
    "viash",
    "workflows",
    "nextflow",
    "testing"
  ],
  "version": "0.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/viash-io/viash-vscode.git"
  },
  "homepage": "https://github.com/viash-io/viash-vscode",
  "bugs": {
    "url": "https://github.com/viash-io/viash-vscode/issues"
  },
  "categories": [
    "Programming Languages",
    "Data Science",
    "Linters",
    "Other"
  ],
  "engines": {
    "vscode": "^1.107.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.vsh.{yaml,yml,py,R,r,sh,js,scala,cs}",
    "workspaceContains:**/_viash.{yaml,yml}"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "mocha -r ts-node/register 'src/**/*.test.ts'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "~25.0.3",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^3.7.1",
    "chai": "^6.2.1",
    "mocha": "^11.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "dependencies": {
    "vscode-test-adapter-api": "^1.9.0",
    "vscode-test-adapter-util": "^0.7.1",
    "yaml": "^2.5.0"
  }
}
